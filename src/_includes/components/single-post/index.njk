<single-post>
    <article class="article">
        <header>
            <h1>{{ title }}</h1>
            <p>{{ date | readableDate }}</p>
            {% if summary %}
                <p>{{ summary }}</p>
            {% endif %}
        </header>
        <div>
            {{ content | safe }}
        </div>
    </article>
</single-post>
