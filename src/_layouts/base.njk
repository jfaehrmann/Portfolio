<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{{ title or metadata.title }}</title>
        <meta name="description" content="{{ description or metadata.description }}">
        <style>{{ '/assets/css/shell.css' | postcss('inline') | safe }}</style>
    </head>
    <body>
        {% include "partials/header.njk" %}
        {% include "components/under-construction/index.njk" %}
        <main id="content" class="page-main{% if templateClass %} {{ templateClass }}{% endif %}">
            {{ content | safe }}
        </main>
        {% include "partials/footer.njk" %}
        <script src="/assets/js/shell.js" type="module"></script>
        <script nomodule>
            document.body.innerHTML = "This Browser is not supported. Please choose a cooler one ;-)"
        </script>
    </body>
</html>
